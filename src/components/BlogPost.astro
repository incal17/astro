---
const {url, title, image, description} = Astro.props;
---

<style>
    div {
        border: 1px solid lightgray;
        background-color: rgba(255, 255, 255, 0.5);
        border-radius: 0.1rem;
        padding: 0.5rem;
        margin: 0.5rem 0;
    }
</style>

<div>
    <img src={image.url} alt={image.alt} width="300"/>
    <h2><a href={url}>{title}</a></h2>
    <p>{description}</p>
</div>